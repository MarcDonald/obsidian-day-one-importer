{
	"compilerOptions": {
		"baseUrl": "src",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"outDir": "dist",
		"lib": ["DOM", "ES5", "ES6", "ES7"],
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": ["**/*.ts"],
	"exclude": ["test/__mocks__/**"]
}
